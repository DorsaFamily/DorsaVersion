<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="25dp"
    android:layoutDirection="ltr"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/bgr_round_ff"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:paddingBottom="15dp"
        android:layout_alignParentStart="true">

        <com.psb.versioncontrol.customview.CTextView
            android:id="@+id/titleerg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="آیا مطمئن هستید؟"
            android:textColor="#000000"
            android:textSize="14sp"
            />

        <com.psb.versioncontrol.customview.CTextView
            android:id="@+id/textView24w"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/titleerg"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#000000"
            android:text="در صورت تایید اشتراک دنیای درسا شما لغو میشود!"/>

        <com.psb.versioncontrol.customview.cButton
            android:id="@+id/buttonTaiid"
            android:layout_width="wrap_content"
            android:minWidth="100dp"
            android:layout_height="40dp"
            android:stateListAnimator="@null"
            android:background="@drawable/button_ok_dialog_register"
            android:text="تایید"
            android:textSize="14sp"
            android:layout_marginRight="20dp"
            android:textColor="@color/White"
            android:layout_below="@+id/textView24w"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp" />

        <com.psb.versioncontrol.customview.cButton
            android:id="@+id/buttonCancel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:minWidth="100dp"
            android:textSize="14sp"
            android:stateListAnimator="@null"
            android:background="@drawable/button_ok_dialog_register"
            android:text="انصراف"
            android:layout_marginLeft="20dp"
            android:textColor="@color/White"
            android:layout_alignBottom="@+id/buttonTaiid"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>


</RelativeLayout>