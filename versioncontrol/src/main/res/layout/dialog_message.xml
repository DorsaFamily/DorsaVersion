<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="25dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/bgr_round_ff"
        android:layout_height="wrap_content">

        <com.psb.versioncontrol.customview.CTextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textColor="@color/Black"
            android:text="اشتراک شما با موفقیت لغو گردید !
باتشکر"
            android:textSize="16sp" />

        <com.psb.versioncontrol.customview.cButton
            android:id="@+id/button3"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@+id/textView24"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:stateListAnimator="@null"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_ok_dialog_register"
            android:text="تایید"
            android:textColor="@color/White" />
    </RelativeLayout>


</RelativeLayout>